<%- include("../partials/header")%>
<div class="container">
    <div class="img-container col">
        <h4> <a href="/bucketlist">Add place!</a> </h4>
    </div>
    <div class=" text-container d-flex flex-col bd-highlight mb-3 justify-content-end">
        <div style="width:30% ; margin:25px;">
            <p>Add details about the place you want to visit!</p>
            <form action="/bucketlist" method="POST">
                <div class="form-group">
                    <label for="city"> City</label>
                    <input class="form-control" type="text" name="bucketlist[city]">
                </div>
                <div class="form-group">
                    <label for="photourl">Photo Url</label>
                    <input class="form-control" type="text" name="bucketlist[photourl]">
                </div>
                <div class="form-group">
                    <label for="description">a few words about this place</label>
                    <input class="form-control" type="text" name="bucketlist[description]">
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="visited">VISITED</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                    <label class="form-check-label" for="bucketlist">BUCKET-LIST</label>
                </div>
                <div class="form-group">
                    <label for="date">When did you travel here?</label>
                    <input class="form-control" type="text" name="bucketlist[date]">

                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-secondary btn-end">Add place</button>
                </div>
            </form>

        </div>


    </div>

</div>
<%- include("../partials/footer")%>