<%- include("../partials/header")%>
<div class="container">

    <div class="img-container col">
        
        <h4> <a href="/bucketlist">Edit place details !</a> </h4>   
    </div>
    <div class=" text-container d-flex flex-col justify-content-end">
        <div style="width:30% ; margin:25px;">
            <p>Edit details about this place you want to visit!</p>
            <form action="/bucketlist/<%=bucketlist._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="city"> City</label>
                    <input class="form-control" type="text" name="bucketlist[city]" value="<%= bucketlist.city %>">
                </div>
                <div class="form-group">
                    <label for="photourl">Photo Url</label>
                    <input class="form-control" type="text" name="bucketlist[photourl]"value="<%= bucketlist.photourl %>">
                </div>
                <div class="form-group">
                    <label for="description">Few words about this place</label>
                    <textarea class="form-control" type="text" name="bucketlist[description]"><%= bucketlist.description %></textarea>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="option1" value="bucketlist[option1]">
                    <label class="form-check-label" for="visited">VISITED</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="option2" value="bucketlist[option2]">
                    <label class="form-check-label" for="bucketlist">BUCKET-LIST</label>
                </div>

                <div class="form-group">
                    <label for="date">When did you travel here?</label>
                    <input class="form-control" type="text" name="bucketlist[date]" value="<%= bucketlist.date %>">

                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-secondary btn-end">Update place</button>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-secondary btn-end">cancel</button>
                </div>
            </form>
            <form id="delete" action="/bucketlist/<%=bucketlist._id %>?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-block btn-danger" value="Delete">
            </form>
        </div>

    </div>

</div>
<%- include("../partials/footer")%>